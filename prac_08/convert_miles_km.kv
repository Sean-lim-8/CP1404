BoxLayout:
    orientation: 'vertical'
    BoxLayout:
        TextInput:
            id: 'input miles'
            font_size: 48
            multiline: False

        BoxLayout:
            orientation: 'vertical'
            size_hint_x: 0.3
            Button:
                text: 'Up'
                on_press: app.handle_increment(1)
            Button:
                text: 'Down'
                on_press: app.handle_increment(-1)

    Button:
        text: 'Convert miles to km'

    Label:
        id: output_label
        text: '0'
        font_size: 48
        color: (1,1,0,1)